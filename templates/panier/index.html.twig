{% extends 'base.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
    <h1>Panier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'table.name'|trans}}</th>
                <th>{{'table.quantity'|trans}}</th>
                <th>{{'panier.date'|trans}}</th>
                <th>{{'panier.state'|trans}}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            {% for panier in paniers %}
                <tr>
                    <td>{{ panier.contenu_panier.produit.nom }}</td>
                    <td>{{ panier.contenu_panier.quantity }}</td>
            {% endfor %}   
                <td>{{ panier.boughtAt ? panier.boughtAt|date('Y-m-d H:i:s') : '' }}</td>
                {% if panier.state is same as(true) %}
                    <td><i class="fas fa-check"></i></td>
                {% else %}
                    <td><i class="fas fa-times"></i> }}</td>
                {% endif %}
                <td>
                    <a href="{{ path('panier_show', {'id': panier.id}) }}">show</a>
                    <a href="{{ path('panier_edit', {'id': panier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('panier_new') }}">Create new</a>
{% endblock %}
